---
const postData = Astro.props.postData;
const dateValue = Astro.props.date;

---

<article class="flex flex-col items-start">
    <div class="relative w-full">
      <img
        src={postData.image_url}
        alt=""
        class="w-full rounded-2xl bg-gray-100 h-[220px]"
      />
    </div>
    <div class="w-full grow flex flex-col justify-between items-start">
      <div class="mt-8 flex items-center gap-x-6 text-xs">
        <time class="text-gray-500">
          {dateValue?.date}
        </time>
        <p class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 text-gray-600 hover:bg-gray-100 font-semibold">{postData.topic}</p>
      </div>
      <div class="group relative">
        <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
            {postData.title}
        </h3>
      </div>
      <div class="relative mt-4 flex items-center gap-x-4 py-3">
        <img src={postData.avatar_url} alt="author" class="h-14 w-14 rounded-full bg-gray-100" />
        <div class="text-sm leading-6">
          <p class="font-semibold text-gray-900 text-base">
            {postData.author}
          </p>
        </div>
      </div>
      <a href={`/blogs/${postData.id}`} class="bg-blue-600 text-white px-3 py-1 rounded-lg">Read More &#x2192;</a>
    </div>
  </article>